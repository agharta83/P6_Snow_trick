<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <!-- Bootstrap Core CSS -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('plugins/animate.css') }}" rel="stylesheet">
        <link href="{{ asset('plugins/plugins.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('plugins/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('plugins/pe-icons.css') }}" rel="stylesheet">

        <!-- Custom Styles -->
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <a class="navbar-brand display-font text-uppercase text-bold" href="#">SnowTricks</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-4 mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link text-uppercase" href="{{path('app_home')}}">Accueil<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" href="#tricks">Tricks</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" href="#">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" href="{{ path('app_logout') }}">Deconnexion</a>
                            </li>
                        {% endif %}
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" href="{{ path('app_login')}}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" href="{{ path('app_register')}}">S'enregistrer</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer class="white-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="list-inline social-links">
                            <li>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-dribbble"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-behance"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                            </li>
                        </ul>
                    </div>

                    <hr class="thin-hr" />

                    <div class="col-md-12 text-center wow">
                        <span class="copyright">Copyright 2019. Designed by DISTINCTIVE THEMES</span>
                    </div>
                </div>
            </div>
        </footer>

        <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
