{% extends 'baseAccount.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registrationStyle.css') }}">
{% endblock %}

{% block body %}
    <div class="login-box">
        <h2>Réinitialiser votre mot de passe</h2>

        {{ form_start(resetForm) }}
        <div class="inputBox">
            {{ form_widget(resetForm.plainPassword) }}
            {{ form_label(resetForm.plainPassword) }}
        </div>

        <input type="submit">Réinitialiser</input>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
