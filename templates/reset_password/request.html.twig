{% extends 'baseAccount.html.twig' %}

{% block title %}Demande de réinitialisation de votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registrationStyle.css') }}">
{% endblock %}

{% block body %}
    <div class="login-box">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h2>Demande de réinitialisation de votre mot de passe</h2>

        {{ form_start(requestForm) }}
        <div class="inputBox">
            {{ form_widget(requestForm.email) }}
            {{ form_label(requestForm.email) }}
        </div>

        <div class="inputBox">
            <p><small>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small></p>
        </div>

        <input type="submit" value="Réinitialiser le mot de passe" />
        {{ form_end(requestForm) }}
    </div>

{% endblock %}
